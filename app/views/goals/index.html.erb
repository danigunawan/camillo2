<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Notes</th>
      <th>User</th>
      <th>Action date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= goal.notes %></td>
        <td><%= goal.user_id %></td>
        <td><%= goal.action_date %></td>
        <td><%= link_to 'Show', goal, class: "btn btn-default"  %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal), class: "btn btn-default"  %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path, class: "btn btn-default"  %>
