<%= simple_form_for(@idea) do |f| %>
  <%= @type %>
    
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :notes, input_html: { class: 'rte' } %>
    <%= f.input :item_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
