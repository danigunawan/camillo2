<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Year</th>
      <th>Author</th>
      <th>Summary</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @s.each do || %>
      <tr>
        <td><%= .title %></td>
        <td><%= .subtitle %></td>
        <td><%= .year %></td>
        <td><%= .author %></td>
        <td><%= .summary %></td>
        <td><%= .publisher %></td>
        <td><%= link_to 'Show',  %></td>
        <td><%= link_to 'Edit', edit__path() %></td>
        <td><%= link_to 'Destroy', , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

