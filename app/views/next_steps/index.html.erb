<p id="notice"><%= notice %></p>

<h1>Next Steps</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Notes</th>
      <th>User</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @next_steps.each do |next_step| %>
      <tr>
        <td><%= next_step.title %></td>
        <td><%= next_step.description %></td>
        <td><%= next_step.notes %></td>
        <td><%= next_step.user_id %></td>
        <td><%= next_step.due_date %></td>
        <td><%= link_to 'Show', next_step %></td>
        <td><%= link_to 'Edit', edit_next_step_path(next_step) %></td>
        <td><%= link_to 'Destroy', next_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Next Step', new_next_step_path %>
