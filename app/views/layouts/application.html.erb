<!DOCTYPE html>
<html>
  <head>
    <title>Camillo</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Crimson+Text:400,400i,700,700i|Roboto+Condensed|Raleway:400,700" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/react_hot_assets' %>
    <div id="ca-auth">
      <% if user_signed_in? %>
        <script>
          window.auth = true
        </script>
        <img src="/assets/man-user.svg" />
        <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "navbar-right") %>        
      <% else %>
        <script>
          window.auth = false
        </script>
        <%= link_to('Login', new_user_session_path, class: "navbar-right")  %>  
      <% end %>
    </div>
    <div id="ca-app">
    </div>
    <% if params[:controller].start_with? "devise/" %>
    
      <%= yield %>
    
    <% end %>
  </body>
</html>
