<p id="notice"><%= notice %></p>

<h1>Creative Actions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Notes</th>
      <th>User</th>
      <th>Action date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creative_actions.each do |creative_action| %>
      <tr>
        <td><%= creative_action.title %></td>
        <td><%= creative_action.description %></td>
        <td><%= creative_action.notes %></td>
        <td><%= creative_action.user_id %></td>
        <td><%= creative_action.action_date %></td>
        <td><%= link_to 'Show', creative_action, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_creative_action_path(creative_action), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', creative_action, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Creative Action', new_creative_action_path, class: "btn btn-default"  %>
