<div class="ca-posts ca-items">
  <% @posts.each_with_index do |post, index| %>
  <div class="row">
    <h2>
      <%= link_to post.title, post_path(post), class: "darkgrey1" %>
      <%= link_to 'X', post_path(post), data: {:confirm => 'Are you sure?'}, :method => :delete, class: "post-delete pull-right" if user_signed_in? && post.user_id == current_user.id %>
    </h2>
    <span class="post-date">
      <%= post.created_at.strftime('%m•%d•%y') %> 
    </span>
    <% if @element %>
    <div>
      <%= raw post.body %>
    </div>
    <% end %>
  </div>
<% end %>
</div>
<%= link_to "New Post", new_post_path, class: "ma4" if current_user and current_user.id == 1 %>
