
<div class="ca-posts">
  <% @posts.each_with_index do |post, index| %>
    <div class="ca-posts-item">
      <div class="ca-col text-right">
        <%= link_to post.title, post_path(post), class: "ca-posts-item-title" %>
      </div>
      <div class="ca-col text-left">
        <%= post.created_at.strftime('%m•%d•%y') %> 
      </div>
    </div>
  <% end %>
</div>
<div class="ca-post-actions">
  <%= link_to "New Post", new_post_path, class: "ca-button ca-new-post" if current_user and current_user.id == 1 %>
</div>
