
<div class="container posts">
  <div class="row">
    <h3>Latest Posts <%= link_to "New", new_post_path, class: "new-post-link" %></h3>
  </div>
  
  <% @posts.each do |post| %>
    <div class="post row">
      <div>
        <h2><%= link_to post.title, post_path(post) %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div>
        <%= raw(strip_tags(post.body)).truncate(358) %>
      </div>
      <div>
        <% if user_signed_in? && post.user_id == current_user.id %>
          <%= link_to 'Delete', post_path(post), data: {:confirm => 'Are you sure?'}, :method => :delete %>
        <% end %>
      </div>
      <br>
    </div>
  <% end %>

</div>
