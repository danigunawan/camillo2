<div class="posts">
  <div class="col-xs-12 post">
    <%= link_to "Edit", edit_post_path(@post), class: "edit-post-link" %>
    <h2><%= @post.title %></h2>
    <h5><%= @post.created_at.strftime('%b %d, %Y') %></h5>
    <div><%= raw @post.body %></div>
    
    <div>
      <em>Element:</em>
      <h4><%= @post.element.name %></h4></div>
  </div>
</div>
